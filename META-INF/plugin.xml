<idea-plugin version="2">
    <id>VersionOne</id>
    <name>VersionOne task provider</name>
    <version>1.0</version>
    <category>TeamWork</category>
    <vendor email="patricksafarov@gmail.com">Patrick Safarov</vendor>

    <description>Task provider for Version One platform</description>

    <depends>com.intellij.tasks</depends>
    <depends>com.jetbrains.plugins.webDeployment</depends>

    <idea-version since-build="131"/>

    <extensions defaultExtensionNs="com.intellij">
      <tasks.repositoryType implementation="com.psafarov.intellij.versionone.VersionOneRepositoryType"/>
    </extensions>
    <actions>
        <group id="MyPlugin.SampleMenu" text="_Sample Menu" description="Sample menu">
            <add-to-group group-id="MainMenu" anchor="last"  />
            <action id="Myplugin.Textboxes" class="com.psafarov.intellij.versionone.Test2" text="Text _Boxes" description="A test menu item" />
        </group>
    </actions>
</idea-plugin>